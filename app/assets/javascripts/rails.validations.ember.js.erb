(function() {
  var applyClientSideValidations = function(model, railsValidations) {

    var emberValidations = {}, property;

    for (property in railsValidations) {
      emberValidations[property.camelize()] = railsValidations[property];
    }
//    App.User.reopen({validations: emberValidations});
      model.reopen({validations: emberValidations});
  }
  <% ClientSideValidations::Ember.models.each do |rails, ember| %>
    applyClientSideValidations(<%= ember %>, <%= rails.constantize.new.client_side_validation_hash.to_json %>);
  <% end %>

}).call(this);
