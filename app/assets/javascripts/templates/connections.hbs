<div class="small-12 large-12 columns">
    <div class="row">
        <div class="small-4 large-4 columns">
            {{#if isSearchVisible}}
                <a {{action toggleSearch}} href="javascript;"><i class="icon-search"></i> Hide search</a>
            {{else}}
                <a {{action toggleSearch}} href="javascript;"><i class="icon-search"></i> Look for collaborators</a>
            {{/if}}
        </div>
    </div>
    <table id="available-users" width="100%">
        <thead>
        <tr>
            <th colspan="3">
                <div class="large-8 columns">

                </div>
                <div class="large-4 columns pull-right">
                    <span class="pull-right">My connections</span>
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
            {{#each entry in connections}}
            <tr>
                <td class="avatar"><img {{bindAttr src="entry.connected_user.avatar" }}/></td>
                <td class="name">
                    {{entry.connected_user.name }}
                </td>
                <td class="action">
                    {{#if entry.is_connection_accepted}}
                    <a {{action "remove" entry }} class="tiny button alert"><i class="icon-remove icon-2x"></i> Disconnect</a>
                    {{else}}
                    <a {{action "remove" entry }} class="tiny button alert"><i class="icon-remove icon-2x"></i> Cancel Request</a>
                    {{/if}}
                </td>
            </tr>
            {{else}}
            <tr>
                <td>
                    Sorry, you do not have connections yet.
                    Use {{#linkTo "connections.search" tagName="a"}}<i class="icon-search"></i> search{{/linkTo}} to find interesting people
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{outlet conn_search}}

