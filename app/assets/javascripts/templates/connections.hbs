<div class="small-12 large-12 columns">
    <table id="available-users" width="100%">
        <thead>
        <tr>
            <th colspan="3">
                <div class="large-8 columns">

                </div>
                <div class="large-4 columns pull-right">
                    {{view RailsDict.UsersSearchView placeholder="Users Search" valueBinding="searchTerm" insert-newline="doConnectionsSearch" }}
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
        {{#each entry in connections}}
        <tr>
            <td class="avatar"><img {{bindAttr src="entry.connected_user.avatar" }}/></td>
            <td class="name">
            </td>
            <td class="email">

            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div class="small-12 large-12 columns">
    <table id="available-users" width="100%">
        <thead>
        <tr>
            <th colspan="3">
                <div class="large-8 columns">
                    Shown <span class="round success label">{{usersShown}}</span> of <span class="round success label">{{usersTotal}}</span> users
                </div>
                <div class="large-4 columns pull-right">
                {{view RailsDict.UsersSearchView placeholder="Users Search" valueBinding="searchTerm" insert-newline="doSearch" }}
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
        {{#each entry in allUsers}}
        <tr>
            <td class="avatar"> <img {{bindAttr src="entry.avatar" }}/></td>
            <td class="name">
                <i {{bindAttr class="entry.isMale:icon-male entry.isFemale:icon-female"}}></i> {{entry.fullName}}
            </td>
            <td class="email">
                {{# if entry.requestSent}}
                <a href="#" class="tiny button success"><i class="icon-ok icon-2x"></i>Request Sent</a>
                {{else}}
                <a href="#" class="tiny button"><i class="icon-group icon-2x"></i>Request Connection</a>
                {{/if}}

            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>