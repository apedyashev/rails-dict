<div class="small-2 large-4 columns">
    <div class="button-bar">
        <ul class="button-group">
            <li>{{#linkTo "dictionaries.dicts" classNameBindings=":button :small" activeClass="disabled"}}Dictionaries{{/linkTo}}</li>
            <li>{{#linkTo "dictionaries.collaborators" classNameBindings=":button :small" activeClass="disabled"}}Collaborators{{/linkTo}}</li>
        </ul>
    </div>

    {{outlet dictwidgets}}
</div>


<div class="small-6 large-8 columns">
    <table id="dictionary" width="100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Russian</th>
                <th>Serbian</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a {{action save}}class="button mini"><span class="gicon-plus gicon-white"></span></a></td>
                <td>{{view Ember.TextField placeholder="Phrase" valueBinding="phrase" classBinding="phraseValid::error"}}</td>
                <td>{{view Ember.TextField placeholder="Translation" valueBinding="translation" classBinding="translationValid::error"}}</td>
            </tr>
            {{#each entry in model}}
            <tr>
                <td>{{entry.id}}</td>
                <td>
                    {{#if entry.isEditMode}}
                        <input {{bindAttr value="entry.phrase"}} />
                    {{else}}
                        {{entry.phrase}}
                    {{/if}}
                </td>
                <td>
                    {{#if entry.isEditMode}}
                        <input {{bindAttr value="entry.translation"}} />
                    {{else}}
                        {{entry.translation}}
                    {{/if}}
                    {{#if entry.isEditMode}}
                        <span class="pull-right">
                        <span class="label" {{action save entry}} class="button mini "><span class="gicon-ok-sign gicon-white"></span></span>
                        <span class="label alert" {{action cancelEditMode entry}} class="button mini"><span class="gicon-remove-sign gicon-white"></span></span>
                        </span>
                    {{else}}
                        <span  {{action remove entry}} class="gicon-minus-sign pull-right action-icon" title="Delete entry"></span>
                        <span  {{action edit entry}} class="gicon-edit pull-right action-icon" title="Edit entry"></span>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>